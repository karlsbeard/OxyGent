{
  "name": "oxygent-web-new",
  "version": "1.0.0",
  "description": "Modern OxyGent Web Interface built with Modern.js",
  "scripts": {
    "reset": "npx rimraf node_modules ./**/node_modules",
    "dev": "modern dev",
    "build": "modern build",
    "start": "modern start",
    "serve": "modern serve",
    "new": "modern new",
    "lint": "biome check --write",
    "lint:check": "biome check",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepare": "simple-git-hooks",
    "upgrade": "modern upgrade"
  },
  "engines": {
    "node": ">=18.20.8",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": ["biome check --files-ignore-unknown=true"]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "dependencies": {
    "@modern-js/runtime": "2.68.10",
    "@modern-js/plugin-tailwindcss": "2.68.10",
    "@tanstack/react-query": "^5.17.0",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.6",
    "framer-motion": "^10.16.16",
    "mermaid": "^10.6.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "react-grid-layout": "^1.4.4",
    "react-markdown": "^9.0.1",
    "socket.io-client": "^4.7.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@modern-js/app-tools": "2.68.10",
    "@modern-js/tsconfig": "2.68.10",
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "~29.2.4",
    "@types/node": "~18.11.9",
    "@types/react": "^18.3.11",
    "@types/react-dom": "~18.3.1",
    "@types/react-grid-layout": "^1.3.5",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.16",
    "lint-staged": "~15.4.0",
    "postcss": "^8.4.32",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "~3.4.14",
    "typescript": "~5.7.3",
    "vitest": "^1.1.0"
  }
}
